# Set this profile to "complain" mode using aa-complain
abi <abi/3.0>,

include <tunables/global>

/usr/bin/gpg {
  include <abstractions/base>
  include <abstractions/bash>
  include <abstractions/consoles>

  /etc/gnupg/gpg.conf r,
  /usr/bin/gpg mr,
  owner /home/*/.gnupg/* wl,
  owner /home/*/.gnupg/gpg.conf r,
  owner /home/*/.gnupg/openpgp-revocs.d/*.rev w,
  owner /home/*/.gnupg/pubring.kbx rw,
  owner /home/*/.gnupg/pubring.kbx.lock rwl,
  owner /home/*/.gnupg/pubring.kbx.tmp rw,
  owner /home/*/.gnupg/pubring.kbx~ w,
  owner /home/*/.gnupg/trustdb.gpg rw,
  owner /home/*/.gnupg/trustdb.gpg.lock rwl,
  owner /run/user/1000/gnupg/S.gpg-agent rw,

}
